<Window x:Class="LibraryManagementSystem.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="400">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Username:" />
            <TextBox Name="UsernameTextBox" Margin="0,5" />
            <TextBlock Text="Password:" Margin="0,10,0,0" />
            <PasswordBox Name="PasswordBox" Margin="0,5" />
            <Button Content="Login" Click="LoginButton_Click" Margin="0,20,0,0" />

            <!-- Register Button -->
            <Button Content="Register" Click="RegisterButton_Click" Margin="0,10,0,0" />
        </StackPanel>
    </Grid>
</Window>

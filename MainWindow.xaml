<Window x:Class="LibraryManagementSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Library Management System" Height="350" Width="525">
    <Grid>
        <Button Content="Test Connection" HorizontalAlignment="Center" VerticalAlignment="Center" Click="TestConnection_Click" />
        <Label x:Name="ConnectionStatus" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="16" /><Button Content="Add Test Book" HorizontalAlignment="Left" VerticalAlignment="Bottom" Click="AddBookTest_Click" />
        <Button Content="Add Test Book" HorizontalAlignment="Left" VerticalAlignment="Bottom" Click="AddBookTest_Click" />
    </Grid>
</Window>

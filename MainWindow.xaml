<Window x:Class="LibraryManagementSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Library Management System" Height="589" Width="600">
	<Grid>
		<!-- Header Label -->
		<Label Content="Library Management System" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="18" FontWeight="Bold" Margin="10" />

		<!-- Book List (DataGrid) -->
		<DataGrid x:Name="BooksDataGrid" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="200" Margin="10,40,10,0" AutoGenerateColumns="True" />

		<!-- Add/Edit Book Section -->
		<GroupBox Header="Book Information" VerticalAlignment="Top" Margin="10,250,10,0" Height="254">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>

				<!-- Book Details Inputs with Labels -->
				<StackPanel Grid.Column="0" Margin="5">
					<Label Content="Title:" />
					<TextBox x:Name="TitleTextBox" Width="200" Margin="5" />

					<Label Content="Author:" />
					<TextBox x:Name="AuthorTextBox" Width="200" Margin="5" />

					<Label Content="ISBN:" />
					<TextBox x:Name="IsbnTextBox" Width="200" Margin="5" />
				</StackPanel>
				<StackPanel Grid.Column="1" Margin="5">
					<Label Content="Genre:" />
					<TextBox x:Name="GenreTextBox" Width="200" Margin="5" />

					<Label Content="Publisher:" />
					<TextBox x:Name="PublisherTextBox" Width="200" Margin="5" />

					<Label Content="Year Published:" />
					<TextBox x:Name="YearPublishedTextBox" Width="200" Margin="5" />

					<Label Content="Copies:" />
					<TextBox x:Name="CopiesTextBox" Width="200" Margin="5" />
				</StackPanel>
			</Grid>
		</GroupBox>

		<!-- CRUD Buttons -->
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
			<Button x:Name="AddBookButton" Content="Add Book" Width="100" Margin="5" Click="AddBook_Click" />
			<Button x:Name="UpdateBookButton" Content="Update Book" Width="100" Margin="5" Click="UpdateBook_Click" />
			<Button x:Name="DeleteBookButton" Content="Delete Book" Width="100" Margin="5" Click="DeleteBook_Click" />
			<Button x:Name="ExportBooksButton" Content="Export Books" Width="100" Margin="5" Click="ExportBooks_Click" />
		</StackPanel>
	</Grid>
</Window>
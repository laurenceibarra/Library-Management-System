<Window x:Class="LibraryManagementSystem.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" Height="300" Width="400">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Username:" />
            <TextBox Name="UsernameTextBox" />

            <TextBlock Text="Password:" Margin="0,10,0,0" />
            <PasswordBox Name="PasswordBox" />

            <TextBlock Text="Confirm Password:" Margin="0,10,0,0" />
            <PasswordBox Name="ConfirmPasswordBox" />

            <TextBlock Text="Role:" Margin="0,10,0,0" />
            <ComboBox Name="RoleComboBox">
                <ComboBoxItem Content="Admin" />
                <ComboBoxItem Content="Librarian" />
            </ComboBox>

            <Button Content="Register" Click="RegisterButton_Click" Margin="0,20,0,0" />
            <!-- Back to Login Button -->
            <Button Content="Back to Login" Click="BackToLoginButton_Click" Margin="0,10,0,0" />
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="LibraryManagementSystem.AddPatronForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Patron" Height="350" Width="400">
    <Grid>
        <Label Content="Full Name" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox Name="FullNameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="100,10,10,0"/>

        <Label Content="Membership ID" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,40,0,0"/>
        <TextBox Name="MembershipIdTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="100,40,10,0"/>

        <Label Content="Email" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,70,0,0"/>
        <TextBox Name="EmailTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="100,70,10,0"/>

        <Label Content="Phone Number" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,100,0,0"/>
        <TextBox Name="PhoneNumberTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="100,100,10,0"/>

        <Label Content="Address" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,130,0,0"/>
        <TextBox Name="AddressTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="100,130,10,0"/>

        <Label Content="Date of Birth" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,160,0,0"/>
        <DatePicker Name="DateOfBirthDatePicker" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="100,160,10,0"/>

        <Label Content="Membership Type" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,190,0,0"/>
        <ComboBox Name="MembershipTypeComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="100,190,10,0">
            <ComboBoxItem Content="Standard"/>
            <ComboBoxItem Content="Premium"/>
            <ComboBoxItem Content="VIP"/>
        </ComboBox>

        <Button Content="Add Patron" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="100,230,0,0" Click="AddPatronButton_Click"/>
    </Grid>
</Window>

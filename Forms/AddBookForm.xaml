<Window x:Class="LibraryManagementSystem.AddBookForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Book" Height="350" Width="400">
    <Grid>
        <Label Content="Title" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox Name="TitleTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="100,10,10,0"/>

        <Label Content="Author" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,40,0,0"/>
        <TextBox Name="AuthorTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="100,40,10,0"/>

        <Label Content="ISBN" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,70,0,0"/>
        <TextBox Name="IsbnTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="100,70,10,0"/>

        <Label Content="Publisher" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,100,0,0"/>
        <TextBox Name="PublisherTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="100,100,10,0"/>

        <Label Content="Year Published" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,130,0,0"/>
        <TextBox Name="YearPublishedTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="100,130,10,0"/>

        <Label Content="Copies" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,160,0,0"/>
        <TextBox Name="CopiesTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="100,160,10,0"/>

        <Label Content="Genre" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,190,0,0"/>
        <TextBox Name="GenreTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="100,190,10,0"/>

        <Button Content="Add Book" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="100,230,0,0" Click="AddBookButton_Click"/>
    </Grid>
</Window>
